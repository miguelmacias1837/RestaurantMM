<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="facci.com.restaurantmm.MainActivityMM"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Restaurant MM"
        android:id="@+id/Titulotv"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.02"
        android:textColor="#ffffff" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="4"
        android:rowCount="9">

        <ImageView
            android:layout_width="409dp"
            android:layout_height="115dp"
            android:id="@+id/imagen1ll"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:src="@drawable/uno"
            android:layout_marginTop="30dp"
            android:onClick="click1"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/imagen2ll"
            android:layout_row="1"
            android:layout_column="0"
            android:src="@drawable/dos"
            android:scaleType="centerCrop"
            android:layout_marginTop="30dp"
            android:onClick="click2"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/imaagen3IV"
            android:layout_row="1"
            android:layout_column="1"
            android:src="@drawable/tres"
            android:scaleType="centerCrop"
            android:layout_marginTop="30dp"
            android:onClick="click3"/>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/imagen4IB"
            android:layout_row="2"
            android:layout_column="0"
            android:src="@drawable/cuatro"
            android:scaleType="centerCrop"
            android:layout_marginTop="30dp"
            android:onClick="click4"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/imaagen5IV"
            android:layout_row="2"
            android:layout_column="1"
            android:src="@drawable/cinco"
            android:scaleType="centerCrop"
            android:layout_marginTop="30dp"
            android:onClick="click5"/>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/imagen6IB"
            android:layout_row="3"
            android:layout_column="0"
            android:src="@drawable/seis"
            android:scaleType="centerCrop"
            android:layout_marginTop="30dp"
            android:onClick="click6"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/imaagen7IV"
            android:layout_row="3"
            android:layout_column="1"
            android:src="@drawable/siete"
            android:scaleType="centerCrop"
            android:layout_marginTop="30dp"
            android:onClick="click7"/>
    </GridLayout>
</LinearLayout>
